<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">8</item>
    </style>

    <style name="EditBase.Username">
        <item name="android:inputType">text</item>
    </style>

    <style name="EditBase.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="ButtonBlue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_blue_pressable</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="ButtonLoginBlue" parent="ButtonBlue">
        <item name="android:minWidth">180dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <color name="azul_safetour">#00CFFF</color>
    <color name="naranja_safetour">#E16E26</color>

</resources>