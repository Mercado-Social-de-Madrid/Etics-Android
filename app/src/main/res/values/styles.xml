<resources>


    <style name="ButtonMes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="ButtonMes.Green">
        <item name="android:background">@drawable/bg_button_green</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ViewProgressPayment">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_progress_payment</item>
        <item name="android:textColor">@color/text_progress_payment</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
