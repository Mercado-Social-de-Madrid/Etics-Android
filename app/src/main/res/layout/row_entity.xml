<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp">


    <ImageView
        android:id="@+id/img_logo_entity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:alpha="1"
        android:background="@color/white"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_entitiy_example" />

    <LinearLayout
        android:id="@+id/view_entity_item_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transblack_entities"
        android:gravity="center_vertical"
        android:minHeight="78dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_entity_name"
                style="@style/TextBase.White"
                android:ellipsize="end"
                android:fontFamily="@font/comfortaa_bold"
                android:maxLines="2"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Fabricantes de sueños" />

            <TextView
                android:id="@+id/tv_entity_category"
                style="@style/TextBase.White"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Librería" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_semantic_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:padding="5dp"
            android:src="@mipmap/ic_similitud_semantica"
            android:visibility="visible"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/img_starred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/img_star_selectable"
            app:tint="@color/white" />


    </LinearLayout>

</RelativeLayout>