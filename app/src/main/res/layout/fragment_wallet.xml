<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="net.mercadosocial.moneda.ui.wallet.WalletFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="SALDO: 17 Boniatos"
                android:textSize="28sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/img_mock_chart" />


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_new_payment"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="PAGAR"
                android:textSize="22sp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_get_boniatos"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:padding="20dp"
                android:text="Obtener boniatos"
                android:textSize="22sp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_transactions"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Movimientos"
                android:textSize="22sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
