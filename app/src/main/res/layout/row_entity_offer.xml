<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_offer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:alpha="1"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_entitiy_example2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_offer_name"
            style="@style/TextBase"
            android:ellipsize="end"
            android:textColor="@color/grey"
            android:maxLines="2"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"
            android:text="Fabricantes de sueños"/>

        <!--<View style="@style/SeparatorHorizontal.Grey"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_marginBottom="10dp"/>-->

        <TextView
            android:id="@+id/tv_offer_date"
            style="@style/TextBase"
            android:textColor="@color/grey"
            android:maxLines="2"
            android:textSize="@dimen/text_small_2"
            android:text="Fabricantes de sueños"
            android:layout_marginTop="10dp"/>



    </LinearLayout>

</LinearLayout>