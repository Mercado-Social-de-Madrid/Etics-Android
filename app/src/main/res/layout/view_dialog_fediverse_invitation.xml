<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        style="@style/TextTitleComfortaa.Purple"
        android:text="@string/request_invitation_header"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        style="@style/TextBase"
        android:text="@string/request_invitation_body"
        android:gravity="center"
        android:layout_marginTop="10dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/request_invitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/request_invitation_btn"
        style="@style/ButtonMes">
    </androidx.appcompat.widget.AppCompatButton>

</LinearLayout>