<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.mercadosocial.moneda">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_mes_v2_144"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.entity_info.EntityInfoActivity" />

        <activity
            android:name=".ui.payment.NewPaymentActivity"
            android:label="@string/send_payment"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity
            android:name=".ui.intro.IntroActivity"
            android:theme="@style/Theme.Intro" />

        <activity
            android:name=".ui.recipient_select.RecipientSelectActivity"
            android:label="@string/select_recipient"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity android:name=".ui.auth.login.LoginActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity android:name=".ui.auth.register.RegisterActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>